<meta name="viewport" content="width=device-width, initial-scale=1">
<meta property="description" content="{{ meta.description }}"/>

<!-- Schema Data-->
<meta itemprop="name" content="{{ schema.name }}">
<meta itemprop="description" content="{{ schema.description }}">
<meta itemprop="image" content="{{ schema.image }}">

<!-- Open Graph data -->
<meta property="og:title" content="{{ openGraph.title }}" />
<meta property="og:description" content="{{ openGraph.description }}"/>
<meta property="og:type" content="profile" />
<meta property="og:url" content="{{ openGraph.url }}" />
<meta property="og:image" content="{{ openGraph.image }}"/>

<!--Twitter Card-->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="{{ twitterCard.handle }}">
<meta name="twitter:title" content="{{ twitterCard.title }}">
<meta name="twitter:description" content="{{ twitterCard.description }}">
<meta name="twitter:image:src" content="{{ twitterCard.image }}">
<meta name="twitter:domain" content="{{ twitterCard.domain }}">
